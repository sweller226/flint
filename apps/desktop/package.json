{
    "name": "@flint/desktop",
    "version": "0.1.0",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "next dev -p 3001",
        "build": "next build",
        "start": "next start",
        "electron": "npm run electron:dev",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:3001 && tsc -p electron && electron .\"",
        "electron:build": "next build && tsc -p electron && electron-builder"
    },
    "dependencies": {
        "@flint/config": "*",
        "@flint/ui": "*",
        "axios": "^1.13.2",
        "clsx": "^2.1.1",
        "framer-motion": "^11.9.0",
        "lightweight-charts": "^4.2.3",
        "next": "^14.2.15",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^5.5.0",
        "tailwind-merge": "^2.5.3"
    },
    "devDependencies": {
        "@types/node": "^20.16.10",
        "@types/react": "^18.3.10",
        "@types/react-dom": "^18.3.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "electron": "^39.2.7",
        "electron-builder": "^25.1.8",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.14",
        "typescript": "^5.6.2",
        "wait-on": "^8.0.1"
    }
}
